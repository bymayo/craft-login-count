{% import "_includes/forms" as forms %}

{% includeCssResource "logincount/css/LoginCount_Style.css" %}
{% includeJsResource "logincount/js/LoginCount_Script.js" %}

{{ forms.textField(
		{
			label: 'Login Delay',
			instructions: 'Only track logins after X amount of time (In seconds)',
			id: 'loginDelay',
			name: 'loginDelay', 
			value: settings['loginDelay'],
		}
	)
}}

{{ forms.selectField({
    label: 'Track Users with CP access',
    instructions: "Don't count logins if the user has access to the CP",
    id: 'trackAccessCp',
    name: 'trackAccessCp', 
    value: settings['trackAccessCp'],
			options: [
			    {
				    label: 'Yes',   
				    value: true
			    },
			    {
				    label: 'No',   
				    value: false
			    }
			]
    })
}}
